{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useUniqueElementIds": {
          "level": "warn",
          "options": {
            "excludedComponents": ["section"]
          }
        }
      },
      "suspicious": {
        "noConsole": "warn"
      },
      "style": {
        "useImportType": {
          "fix": "safe",
          "level": "on",
          "options": {
            "style": "separatedType"
          }
        }
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "on",
          "options": {}
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": true, "source": [":BUN:", ":NODE:"] },
              [":BUN:", ":NODE:"],
              ":BLANK_LINE:",

              {
                "type": true,
                "source": [
                  ":PACKAGE:",
                  ":PACKAGE_WITH_PROTOCOL:",
                  ":URL:",
                  "!@syntax402/**"
                ]
              },
              [
                ":PACKAGE:",
                ":PACKAGE_WITH_PROTOCOL:",
                ":URL:",
                "!@syntax402/**"
              ],
              ":BLANK_LINE:",

              { "type": true, "source": "@syntax402/**" },
              "@syntax402/**",
              ":BLANK_LINE:",

              { "type": true, "source": ":ALIAS:" },
              ":ALIAS:",
              ":BLANK_LINE:",

              { "type": true, "source": "**/__*/**" },
              "**/__*/**",
              ":BLANK_LINE:",

              { "type": true, "source": ":PATH:" },
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
